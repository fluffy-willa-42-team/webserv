{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "debug webserv Linux",
			// "preLaunchTask": "cube3d debug compile",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/webserv",
			"args": ["${input:config_file}"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb",
			"setupCommands": [
			{
				"description": "Enable pretty-printing for gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			}
		],
		},
		{
			"name": "debug webserv MacOs",
			// "preLaunchTask": "cube3d debug compile",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/cube3d",
			"args": ["${input:config_file}"],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"MIMode": "lldb"
		  },
	],
	"inputs": [
		{
			"id": "config_file",
			"type": "promptString",
			"description": "config file",
			"default": "conf/default.conf"
		}
		]
}